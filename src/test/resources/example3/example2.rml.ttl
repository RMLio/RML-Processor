#Mappings for Airport.csv: 
#<#AirportMapping> plus the references to <#TransportMapping> in conjuction with the #Transport.xml file and the references to <#VenueMapping> in conjuction with the Venue.json #file.
#
#Mappings for Transport.xml: 
#only <#TransportMapping> 
#
#Mappings for Venue.json: 
#<#VenueMapping> and <#LocationMapping>.

@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix  rml: <http://mmlab.be/rml#> .
@prefix ql: <http://mmlab.be/ql#> .
@prefix mail: <http://example.com/mail#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.example.com/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix transit: <http://vocab.org/transit/terms/> .
@prefix wgs84_pos: <http://www.w3.org/2003/01/geo/wgs84_pos#>.
@prefix schema: <http://schema.org/>.
@prefix gn: <http://www.geonames.org/ontology#>.


<#AirportMapping>
    rml:logicalSource [
rml:sourceName "http://www.example.com/files/Airport.csv"
    ];
    rr:subjectMap [
   	 rr:template "http://airport.example.com/{id}";
   	 rr:class transit:Stop 
    ];
    rr:predicateObjectMap [
   	 rr:predicate transit:route;
   	 rr:objectMap [
   		  rr:parentTriplesMap [
          <#TransportMapping>[
   			    rr:joinCondition [
   			      rr:child "stop";
   			      rr:parent "/transport/bus@id";
            ]
          ]
        ]
      ]
    ];  
    rr:predicateObjectMap [
   	 rr:predicate wgs84_pos:location;
   	 rr:objectMap [
   		 <#VenueMapping> [
   			 rr:joinCondition [
   				 rr:child "city";
   				 rr:parent "$.location.city";
   			  ]
        ]
      ]
    ].


<#TransportMapping>
    rml:logicalSource[
      rml:sourceName "http://www.example.com/files/transport.xml";
      rml:query "/transport/";
      rml:queryLanguage ql:XPath;
    ];
    
    rr:subjectMap [
      rr:template "http://trans.example.com/{/transport/bus@id}";
      rr:class transit:Stop 
    ];

    rr:predicateObjectMap [
      rr:predicate transit:stop;
      rr:objectMap [
       rml:selector "/transport/bus/route/stop@id";
       rr:datatype xsd:int 
      ] 
    ];
  
    rr:predicateObjectMap [
      rr:predicate rdfs:label;
      rr:objectMap [
       rml:selector "/transport/bus/route/stop" 
      ] 
    ] . 

<#VenueMapping>
    rml:logicalSource [
      rml:sourceName "http://www.example.com/files/Venue.json";
      rml:queryLanguage ql:JSONPath;
      rml:query "$"
    ];
    rr:subjectMap [
     rr:template "http://loc.example.com/city/{$.location.city}";
     rr:class schema:City 
    ];
    
    rr:predicateObjectMap [
      rr:predicate wgs84_pos:location;
      rr:objectMap <#LocationMapping>
    ]; 
    rr:predicateObjectMap [
      rr:predicate gn:countryCode;
      rr:objectMap "$.location.country" 
     ].


<#LocationMapping>
  rml:logicalSource [
    rml:sourceName "http://www.example.com/files/venue.json";
    rml:language ql:JSONPath;
    rml:query "$"
  ];

  rr:subjectMap [
    rr:template "http://loc.example.com/city/{$.location.city}"
  ];

  rr:predicateObjectMap [
    rr:predicate wgs84_pos:lat;
    rr:objectMap [ rml:selector "$.venue.latitude" ]
  ];
    
  rr:predicateObjectMap [
    rr:predicate wgs84_pos:long;
    rr:objectMap [rml:selector "$.venue.longitude"]
  ].



